                            <ul class="tag_list">
                                <?php
                                 if (count($transaction->tags)>0){
                                    foreach ($transaction->tags AS $tag){
                                        echo "<li><a href='/tag/' title='View tag statement'>{$tag->tag_name}</a></li>";
